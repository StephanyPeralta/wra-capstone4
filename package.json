  "private": true,
  "dependencies": {
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-color": "^3.0.6",
